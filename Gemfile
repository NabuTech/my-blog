source "https://rubygems.org"

# Specify Bundler version
gem 'bundler', '~> 2.2'

# Specify minimal-mistakes-jekyll version
gem "minimal-mistakes-jekyll", "~> 4.24.0"

# Specify the Jekyll version
gem "jekyll", "~> 3.9.3"

# Remove the gem "github-pages" and specify individual gems instead
# gem "github-pages", group: :jekyll_plugins
gem "jekyll-feed", "~> 0.12"
gem "jekyll-sass-converter"
gem "jekyll-include-cache"

# Specify common versions for the conflicting gems
gem "jekyll-commonmark-ghpages", "~> 0.4.0"
gem "commonmarker", "~> 0.23.9"

# Add the "tzinfo" and "tzinfo-data" gems outside the "platforms" block
gem "tzinfo", ">= 1", "< 3", platforms: [:mingw, :x64_mingw, :mswin, :jruby]
gem "tzinfo-data", platforms: [:mingw, :x64_mingw, :mswin, :jruby]

# Performance-booster for watching directories on Windows
gem "wdm", "~> 0.1.1", platforms: [:mingw, :x64_mingw, :mswin]

# Lock `http_parser.rb` gem to `v0.6.x` on JRuby builds
gem "http_parser.rb", "~> 0.6.0", platforms: [:jruby]

# Specify webrick version
gem 'webrick', '~> 1.7', group: :jekyll_plugins

# Specify nokogiri version
gem 'nokogiri', '1.15.4'
